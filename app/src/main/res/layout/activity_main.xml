<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:ignore="HardcodedText">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="cookie"
			android:id="@+id/cookie"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="籍贯"
			android:layout_marginTop="10dp"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="省"
			android:id="@+id/jgprov"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="市"
			android:id="@+id/jgcity"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="家乡所在地"
			android:layout_marginTop="10dp"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="省"
			android:id="@+id/homeprov"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="市"
			android:id="@+id/homecity"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="地址"
			android:id="@+id/homeadadr"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="当前所在地（注意开学/放假等时候要修改）"
			android:layout_marginTop="10dp"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="省"
			android:id="@+id/nowprov"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="市"
			android:id="@+id/nowcity"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="地址"
			android:id="@+id/nowadadr"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="手机号"
			android:id="@+id/phone"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="12"
			android:hint="返校前7天是否做核酸检测"
			android:id="@+id/acid"
			android:layout_marginTop="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="其他选项默认都是”正常“选项"
			android:layout_marginVertical="10dp"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="提交"
			android:layout_marginBottom="10dp"
			android:onClick="onSubmitClick"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/result"
			android:gravity="left"/>

	</LinearLayout>

</ScrollView>